<Window x:Class="Practice_18.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice_18"
        mc:Ignorable="d"
        Title="Жывтоне" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <ListView x:Name="lvAnimals" Grid.Row="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Type" />
                    <GridViewColumn Header="Name" />
                </GridView>
            </ListView.View>
        </ListView>
        
        <StackPanel Grid.Row="1" Margin="5">
            <Button x:Name="btnAdd" Content="Добавить"/>
            <Button x:Name="btnEdit" Content="Редактировать"/>
            <Button x:Name="btnRemove" Content="Удалить"/>
        </StackPanel>

    </Grid>
</Window>
